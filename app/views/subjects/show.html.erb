<p id="notice"><%= notice %></p>



<p>
  <strong>Name:</strong>
  <%= @subject.name %>
</p>

<p>
  <strong>Hours:</strong>
  <%= @subject.hours %>
</p>

<p>
  <strong>Remarks:</strong>
  <%= @subject.remarks %>
</p>

<p>
  <strong>Enrolled students:</strong>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>NIF</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.name, student %></td>
        <td><%= link_to student.nif, student %></td>
        <td><%= link_to 'Unenroll', "" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</p>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
