<%= form_for(@subject) do |f| %>
    <% if @subject.errors.any? %>
        <div id="error_explanation">
          <h2><%= t("errors_count",count: @subject.errors.count) %> <%= t('prohibited_subject', count: @subject.errors.count) %></h2>

          <ul>
            <% @subject.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :hours %><br>
      <%= f.number_field :hours %>
    </div>
    <div class="field">
      <%= f.label :remarks %><br>
      <%= f.text_area :remarks, rows: 10 %>
    </div>
    <div class="actions">
      <%= f.submit ['new','create'].include?(params[:action]) ? t('create_subject') : t('update_subject') %>
    </div>
<% end %>
