<h1><%= t :listing_subjects %></h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th><%= t :name %></th>
    <th><%= t :hours %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.hours %></td>
        <td><%= link_to t(:show), subject %></td>
        <td><%= link_to t(:edit), edit_subject_path(subject) %></td>
        <td><%= link_to t(:destroy), subject, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

