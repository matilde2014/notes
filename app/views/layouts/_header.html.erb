<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to t(:wellcome_teacher_notes), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to t(:home), root_path %></li>
          <% if user_signed_in? %>
              <li><%= link_to t(:subjects), subjects_path %></li>
              <li><%= link_to t(:students), students_path %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t(:account) %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t(:settings), edit_user_registration_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t(:sign_out), destroy_user_session_path, method: "delete" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to t(:sign_in), new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>