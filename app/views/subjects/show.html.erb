<p id="notice"><%= notice %></p>



<p>
  <strong><%= t('activerecord.attributes.subject.name') %>:</strong>
  <%= @subject.name %>
</p>

<p>
  <strong><%= t('activerecord.attributes.subject.hours') %>:</strong>
  <%= @subject.hours %>
</p>

<p>
  <strong><%= t('activerecord.attributes.subject.remarks') %>:</strong>
  <%= @subject.remarks %>
</p>

<p>
  <strong><%= t(:enrolled_students) %>:</strong>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th></th>
    <th><%= t :name %></th>
    <th><%= t :nif %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
      <tr>
        <td><%= link_to(image_tag(student.image_url(:thumb)), student) if student.image? %></td>
        <td><%= link_to student.name, student %></td>
        <td><%= link_to student.nif, student %></td>
        <td><%= link_to t(:unenroll), "" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</p>

<%= link_to t(:edit), edit_subject_path(@subject) %> |
<%= link_to t(:back), subjects_path %>