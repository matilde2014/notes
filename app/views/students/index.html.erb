<h1><%= t(:listing_students) %></h1>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:birthday) %></th>
    <th><%= t(:nif) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.birthday %></td>
        <td><%= student.nif %></td>
        <td><%= link_to t(:show), student %></td>
        <td><%= link_to t(:edit), edit_student_path(student) %></td>
        <td><%= link_to t(:destroy), student, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new_student), new_student_path %>
